@model Mahc_Final.ViewModels.Careers
@{
    ViewBag.Title = "Careers";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}


@section leftnav {
    @Html.Partial("~/Views/Careers/Admin/_Navigation.cshtml")
}


<h2>Careers feature admin</h2>

<div class="row">
    <div class="col-lg-6 col-md-6">
        <table class="table">
            <caption><h4>Latest opportunities</h4></caption>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.opportunities.First().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.opportunities.First().Desc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.opportunities.First().Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.opportunities.First().Date_created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.opportunities.First().Created_by)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.opportunities.First().Date_last_modified)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.opportunities.First().Modified_by)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.opportunities.First().Job_types.Title)
                </th>
                <th></th>
            </tr>
           
            @foreach (var item in Model.opportunities)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date_created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HosMember.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date_last_modified)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HosMember1.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job_types.Title)
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-lg-6 col-md-6">
        <table class="table">
            <caption><h4>Latest applications</h4></caption>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.applications.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.applications.First().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.applications.First().Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.applications.First().CV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.applications.First().Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.applications.First().Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.applications.First().Job.Title)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.applications)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job.Title)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<p>@Html.ActionLink("Back", "Index", "Admin")</p>