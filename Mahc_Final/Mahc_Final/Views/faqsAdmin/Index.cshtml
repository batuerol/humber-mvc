@model IEnumerable<Mahc_Final.DBContext.faq>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<style>
    .options{
        float: right;
    }

    .add{
        float: right;
    }
    hr {
  border: 0;
  clear:both;
  display:block;
  width: 96%;               
  background-color:black;
  height: 1px;
}
</style>

<h2>FAQ</h2>

<hr />

    @foreach (var item in Model)
    {
        <b>
            @Html.DisplayFor(modelItem => item.Question)
            <p class="options">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })</p>
        </b>
        <br />
            <p>
                @Html.DisplayFor(modelItem => item.Answer)
            </p>
            <br />
            <hr />
    }

<p class="add">
    @Html.ActionLink("Add new Q&A", "Create")
</p>
