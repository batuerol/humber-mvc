@model Mahc_Final.DBContext.faq

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<style>
    .submit{
        float: right;
    }
</style>

<h2>FAQ</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Q&A Id: @Html.DisplayFor(model => model.Id)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                <b>Question: </b><textarea class="form-control text-box" id="Question" name="Question" rows="3" style="min-width: 100%">@Html.DisplayFor(model => model.Question)</textarea>
                @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <b>Answer: </b><textarea class="form-control text-box" id="Answer" name="Answer" rows="5" style="min-width: 100%">@Html.DisplayFor(model => model.Answer)</textarea>
                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default submit" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
