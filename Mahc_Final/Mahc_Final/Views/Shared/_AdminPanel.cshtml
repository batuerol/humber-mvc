<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
    <link href="~/Content/AdminPanel.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/jquery-ui-timepicker-addon.css">
    
</head>
<body>
    <header>
        <div class="container">
            <div style="float:right;" class="navbar-header">
                <div class="row">
                    <div class="navbar">
                        <ul class="nav nav-pills">
                            <li>@Html.ActionLink("Website", "Index", "Home")</li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Account <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("My account", "Index", "Admin")</li>
                                    <li>@Html.ActionLink("Logout", "Index", "Admin")</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <h1>Admin panel</h1>
            <div style="float:left;" class="navbar-header">
                <div class="row">
                    <div class="navbar">
                        <ul class="nav nav-pills">
                            <li>@Html.ActionLink("Pages", "Index", "Admin")</li>
                            <li>@Html.ActionLink("Menus", "Index", "Admin")</li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Management <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("ER wait time", "Index", "Admin")</li>
                                    <li>@Html.ActionLink("Careers", "Index", "Careers")</li>
                                    <li>@Html.ActionLink("Volunteers", "Index", "Volunteer")</li>
                                    <li>@Html.ActionLink("Donations", "Index", "Admin")</li>
                                    <li>@Html.ActionLink("Gift shop", "Index", "Admin")</li>
                                    <li>@Html.ActionLink("Feedback", "Index", "Admin")</li>
                                    <li>@Html.ActionLink("FAQ", "Index", "Admin")</li>
                                    <li>@Html.ActionLink("Contact us", "Index", "Admin")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Users", "Index", "Admin")</li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Doctors <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Find a doctor", "Index", "Admin")</li>
                                    <li>@Html.ActionLink("Appointments", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Staff directory", "Index", "Home")</li>
                                </ul>
                            </li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Inform <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Events", "Index", "Events")</li>
                                    <li>@Html.ActionLink("News", "Index", "News")</li>
                                    <li>@Html.ActionLink("Alerts", "Index", "Alerts")</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    <footer>
        <div class="container">
            <div class="row">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </div>
        </div>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-ui-timepicker-addon.js"></script>
</body>
</html>