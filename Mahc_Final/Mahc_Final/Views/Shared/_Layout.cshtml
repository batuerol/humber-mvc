                                    <div class="col-lg-12 col-md-12 col-sm-12 col-centered col-xs-8 ">
                                        <div class="col-centered">
                                            <button type="button" class="btn btn-default btn-block navbar-btn">Sign in / Register</button>
                                            <button type="button" class="btn btn-default btn-block navbar-btn">Donate</button>
                                        </div>
                                        <div class="input-group">
                                            <input type="text" class="form-control pull-right textcolour" placeholder="Search for...">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="button">Go!</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 pull-right">

                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-left">
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Patients <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Patient Services", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Find a Doctor", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Make an Appointment", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Make a Payment", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Refer a Patient", "Index", "Home")</li>
