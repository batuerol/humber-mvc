                                </ul>
                            </li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Visitors <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Visiting", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Getting in MAHC", "Index", "Home")</li>
                                </ul>
                            </li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Services <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Regular Services", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Emergency Services", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Health Resources", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Quality of Services", "Index", "Home")</li>
                                </ul>
                            </li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Staff <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Staff Portal", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Physicians", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Research Programs", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Student Resources", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Board of Directors", "Index", "Home")</li>
                                </ul>
                            </li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Work with Us <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Job Postings",  "PublicIndex", "Jobs")</li>
                                    <li>@Html.ActionLink("Volunteer Opporunities", "PublicIndex", "Tasks")</li>
                                    <li>@Html.ActionLink("Student Opportunities", "PublicIndex", "Jobs")</li>
                                    <li>@Html.ActionLink("Physician Recruitment Opportunities",  "PublicIndex", "Jobs")</li>
                                </ul>
                            </li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    About MAHC <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("MAHC NEWS", "PublicIndex", "News")</li>
                                    <li>@Html.ActionLink("Public Reporting", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Funding and Budget", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Planning for Future", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Contact Us", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Feedback", "Index", "Home")</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>
    <div class="container body-content">
        @RenderSection("leftnav", required: false)
        @RenderBody()
    </div>
