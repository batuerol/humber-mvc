@model IEnumerable<Mahc_Final.DBContext.Task>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section leftnav {
    @Html.Partial("~/Views/Volunteer/Public/_Navigation.cshtml")
}

<div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
    <h2>Available tasks</h2>
    <section>

        @foreach (var item in Model)
        {
            <article>
                <h3>
                    @Html.ActionLink(item.Title, "PublicDetails", new { id = item.Id })
                </h3>
                <p>
                    @Html.DisplayFor(modelItem => item.Desc)
                </p>
                @Html.ActionLink("Read more..", "PublicDetails", new { id = item.Id })
            </article>
        }

    </section>
</div>