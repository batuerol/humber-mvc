@model Mahc_Final.DBContext.contactInfo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<style>
    box{
        width: 100%;
    }
    .boxInfo{
        width: 100%;
    }
    .submit{
        float: right;
    }
</style>

<h2>Contact Us</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="box">
            <div class="form-group col-md-1 boxInfo">
                <b>Contact Information Content: </b>
                <textarea class="form-control text-box" id="content" name="content" rows="10" style="min-width: 100%">@Html.DisplayFor(model => model.content)</textarea>
                @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })

                <br />

                <b>Hospital Address: </b>
                <textarea class="form-control text-box" id="address_one" name="address_one" rows="5" style="min-width: 100%">@Html.DisplayFor(model => model.address_one)</textarea>
                @Html.ValidationMessageFor(model => model.address_one, "", new { @class = "text-danger" })

                <br />

                <b>Hospital Address: </b>
                    <textarea class="form-control text-box" id="address_two" name="address_two" rows="5" style="min-width: 100%">@Html.DisplayFor(model => model.address_two)</textarea>
                    @Html.ValidationMessageFor(model => model.address_two, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default submit" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Main Page", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
