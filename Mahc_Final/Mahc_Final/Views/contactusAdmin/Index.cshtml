@model IEnumerable<Mahc_Final.DBContext.contactInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<style>
    .content {
        width: 100%;
    }

    .info {
        display: inline;
        float: left;
        width: 49%;
    }

    .map {
        float: right;
        width: 50%;
    }


    .form {
        width: 100%;
        margin-top: 37%;
    }

    .form-control {
        max-width: 1000px;
    }

    .box {
        width: 30%;
    }

    .boxInfo {
        width: 100%;
    }

    .messageBox {
        float: right;
        width: 70%;
    }

    .boxMessage {
        width: 100%;
    }

    .g-recaptcha {
    }

    .submit {
        float: right;
    }

    .g-recaptcha {
        float: right;
    }

    .message {
        font-size: 20px;
        color: red;
        float: right;
    }

    @@media only screen and (max-width: 800px) {

        .info {
            width: 100%;
        }

        .map {
            width: 100%;
        }

        .box {
            width: 100%;
        }

        .messageBox {
            float: none;
            width: 100%;
            height: 350px;
        }
</style>

<h2>Contact Us</h2>


<hr />
    <div class="info">
                   
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <p>@Html.DisplayFor(modelItem => item.content)</p>
                    </td>
                    <td>
                        <p>@Html.DisplayFor(modelItem => item.address_one)</p>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address_two)
                    </td>
                    <td>
                        <br />
                        <br />
                        <p>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</p>
                    </td>
                </tr>
            }
    </div>

    <div class="map">
        <script src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCI4HjceaqQXFehVnyZDhIzjOzT5cnIZrM'></script>

        <div id='gmap_canvas' style='height:400px;width:520px;'></div>
        <style>
            #gmap_canvas img {
                max-width: none !important;
                background: none !important;
                border: double;
                border-color: yellow;
                background-color: orange;
            }
        </style>
        <a href='https://addmap.net/'>https://www.Addmap.net</a>

        <script type='text/javascript' src='https://embedmaps.com/google-maps-authorization/script.js?id=901f7cd963fc37cbc5cc3a5d87bf81ea334a26aa'></script>
        <script type='text/javascript'>function init_map() { var myOptions = { zoom: 13, center: new google.maps.LatLng(45.003524891681145, -79.38294823543703), mapTypeId: google.maps.MapTypeId.ROADMAP }; map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions); marker = new google.maps.Marker({ map: map, position: new google.maps.LatLng(45.003524891681145, -79.38294823543703) }); infowindow = new google.maps.InfoWindow({ content: '<strong>Muskoka Hospital</strong><br>75 Ann St<br>P1L 2E4 Bracebridge<br>' }); google.maps.event.addListener(marker, 'click', function () { infowindow.open(map, marker); }); infowindow.open(map, marker); } google.maps.event.addDomListener(window, 'load', init_map);</script>
    </div>
</div>

<br />
    <hr />
    <p class="text-center"><b>Contact Us Form will be displayed here on Visitor's page</b></p>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
