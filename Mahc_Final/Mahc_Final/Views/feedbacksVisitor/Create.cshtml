@model Mahc_Final.DBContext.feedback

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.ThankMessage != null)
{
    <script>
    var message = '@ViewBag.ThankMessage';
    alert(message);
    </script>
}

<style>
    .form-control {
        max-width: 1000px;
    }

    .box {
        width: 30%;
    }

    .boxInfo {
        width: 100%;
    }

    .messageBox {
        float: right;
        width: 70%;
    }

    .boxMessage {
        width: 100%;
    }

    .g-recaptcha {
        float: right;
    }

    .submit {
        float: right;
    }

    .message {
        font-size: 20px;
        color: red;
        float: right;
    }

    @@media only screen and (max-width: 800px) {
        .box {
            width: 100%;
        }

        .messageBox {
            float: none;
            width: 100%;
            height: 350px;
            background-color: purple;
        }
    }
</style>

<h2>Feedback</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <p>We will love to hear from you! Submit a feedback.</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="box">
            <div class="form-group col-md-10 boxInfo">
                Email:<input class="form-control text-box" id="VisitorEmail" name="VisitorEmail" type="email" value="" placeholder="Required" required />
                @Html.ValidationMessageFor(model => model.VisitorEmail, "", new { @class = "text-danger" })

                <br />

                Name: <input class="form-control text-box" id="VisitorName" name="VisitorName" value="" />
                @Html.ValidationMessageFor(model => model.VisitorName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="messageBox">
            <div class="form-group col-md-10 boxMessage">
                Feedback: <textarea class="text-box form-control" id="Message" name="Message" rows="10" value="" placeholder="Required" required></textarea>
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="g-recaptcha" data-sitekey="6LekzBwUAAAAAP-Fx9Ibtg1ZWG51qbZP00p_9Fxd"></div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit Feedback" class="btn btn-default submit" />
            </div>
        </div>
    </div>
}
<div class="message">
    @ViewBag.Message
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
